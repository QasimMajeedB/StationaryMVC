@model Stationary.Models.tbl_stationaryRequest

@{
    ViewBag.Title = "Stationary_Request";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Stationary_Request</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>tbl_stationaryRequest</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.st_reqid)

        <div class="form-group">
            @Html.LabelFor(model => model.s_id, "s_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("sid", null, htmlAttributes: new { @class = "form-control",@Values=@ViewBag.sid })
                @Html.ValidationMessageFor(model => model.s_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user_id, "user_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("uid", null, htmlAttributes: new { @class = "form-control", @Values=ViewBag.uid })
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.item_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("name", new { htmlAttributes = new { @class = "form-control", @Values = @ViewBag.name } })
                @Html.ValidationMessageFor(model => model.item_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.req_qty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("qty", new { htmlAttributes = new { @class = "form-control", @Values = @ViewBag.qty,@id="qty" } })
                @Html.ValidationMessageFor(model => model.req_qty, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("price", new { htmlAttributes = new { @class = "form-control", @Values = @ViewBag.price, @id = "price" } })
                @Html.ValidationMessageFor(model => model.req_totalprice, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.req_totalprice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("total", new { htmlAttributes = new { @class = "form-control", @Values = @ViewBag.total,@id="total"}})
                @Html.ValidationMessageFor(model => model.req_totalprice, "", new { @class = "text-danger" })
            </div>
        </div>

       

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Request Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}
 @if (@ViewBag.error!=null) {
     <script>alert('@ViewBag.error')</script> 
 }
@if (@ViewBag.e != null)
{
    <script>alert('@ViewBag.e')</script>
}  
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js "></script>

<script>
// we used jQuery 'keyup' to trigger the computation as the user type
$('#qty').keyup(function () {

    // initialize the sum (total price) to zero
    var q = $("#qty").val();
    var p = $("#price").val();
    var sum = p * q;
    // set the computed value to 'totalPrice' textbox
    $('#total').val(sum);

});
</script>